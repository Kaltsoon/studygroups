doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Study Groups
    link(href='/components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/components/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/dist/app.min.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body#welcome
    .container
      .row
        .col-md-6
          form.form-signin(method='POST', action='/users/sign-in')
            h2.form-signin-heading Sign in
            if signInError
              div(class='alert alert-danger') Wrong username or password.
            label.sr-only(for='inputEmail') Username
            input#inputEmail.form-control(type='text', name='username', placeholder='Username', required='', autofocus='', value=signInUsername)
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control.last(type='password', name='password', placeholder='Password', required='')
            button.btn.btn-lg.btn-primary.btn-block(type='submit')
              i.fa.fa-sign-in
              |  Sign in
        .col-md-6
          form.form-signin(method='POST', action='/users/sign-up')
            h2.form-signin-heading Create an user
            if signUpErrors.length > 0
              div(class='alert alert-danger')
                ul
                  each error in signUpErrors
                    li=error.message
            label.sr-only(for='inputUsername') Username
            input#inputUsername.form-control(type='text', name='username', placeholder='Username', required='', autofocus='', value=signUpUsername)
            label.sr-only(for='inputEmail') Email
            input#inputEmail.form-control(type='email', name='email', placeholder='Email', required='', autofocus='', value=signUpEmail)
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
            label.sr-only(for='inputPasswordConfirmation') Password confirmation
            input#inputPasswordConfirmation.form-control.last(type='password', name='passwordConfirmation', placeholder='Password confirmation', required='')
            button.btn.btn-lg.btn-success.btn-block(type='submit')
              i.fa.fa-user
              |  Create
